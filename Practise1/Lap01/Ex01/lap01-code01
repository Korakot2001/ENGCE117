#include <stdio.h>

int main(){
    int *a[3];// *(a[3])
    int x, y, z;
    x = 1 ; y = 2 ; z = 3 ;
    a[0] = &x;
    a[1] = &y;
    a[2] = &z;
    printf("*a[0] =  %d\n", *a[0] );
    printf("*a[1] =  %d\n", *a[1] );
    printf("*a[2] =  %d\n", *a[2] );
    printf("\n");
    printf("*a[0] =  %d (&x = %d)\n", a[0],(&x) );
    printf("*a[0] =  %d (&x = %d)\n", a[1],(&y) );
    printf("*a[0] =  %d (&x = %d)\n", a[2],(&z) );

    return 0;
}
