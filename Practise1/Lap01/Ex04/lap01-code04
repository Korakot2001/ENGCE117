#include <stdio.h>

#include <stdlib.h>

int main() {
  int row, col, i, j, * a;
  printf("How many row, cols?");
  scanf("%d %d", & row, & col);

  a[row * col]; //ประกาศ a เป็น pointer

  for (int i = 0; i < row; i++) {
    for (int j = 0; j < col; j++) {
      printf("a[%d][%d]:", i, j);
      scanf("%d", & a[i * col + j]);
    }
  }

  return 0;
}
